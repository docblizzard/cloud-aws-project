generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String     @id @unique @default(uuid())
  username String     @unique
  password String
  comment  Comment[]
  post     Post[]
}

model Comment {
  id      String @id @unique @default(uuid())
  User    User   @relation(fields: [userId], references: [id])
  userId  String 
  Post    Post   @relation(fields: [postId], references: [id])
  postId  String
  comment String
}

model Post {
  id      String    @id @unique @default(uuid())
  User    User      @relation(fields: [userId], references: [id])
  userId  String
  title   String
  content String
  comment Comment[]
  }